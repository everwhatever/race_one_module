{% extends 'base.html.twig' %}

{% block title %}Hello RaceController!{% endblock %}

{% block body %}

    <div class="d-flex align-items-center justify-content-center" style="height: 35px">
        <h3>Kierowcy: </h3>
    </div>

    <div class="d-flex align-items-center justify-content-center">
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">kierowca</th>
            </tr>
            </thead>
            <tbody>
            {% for driver in drivers %}
                <tr>
                    <th scope="row">{{ driver.getId() }}</th>
                    <td><a style="" href="{{ path('app_driver',{'id':driver.getId()}) }}">{{ driver.getEmail() }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
